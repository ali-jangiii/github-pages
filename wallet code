    <script>
        // Sample User Wallet Data
        let walletBalance = 8431.53;

        // Fetch the Bitcoin price using CoinGecko API
        async function fetchBitcoinPrice() {
            try {
                const response = await fetch('https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd');
                
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                
                const data = await response.json();
                
                // Check if the price data exists
                if (data.bitcoin && data.bitcoin.usd) {
                    document.getElementById('bitcoin-price').innerText = data.bitcoin.usd;
                } else {
                    throw new Error('Bitcoin price data not found');
                }
            } catch (error) {
                console.error('Error fetching Bitcoin price:', error);
                document.getElementById('bitcoin-price').innerText = 'Error fetching price';
            }
        }

        // Send Money Modal and Functionality
        const paymentModal = document.getElementById('paymentModal');
        const closeModal = document.querySelector('.close');
        const sendButton = document.getElementById('sendButton');
        const submitPaymentButton = document.getElementById('submitPayment');

        sendButton.addEventListener('click', function() {
            paymentModal.style.display = 'block';
        });

        closeModal.addEventListener('click', function() {
            paymentModal.style.display = 'none';
        });

        window.addEventListener('click', function(event) {
            if (event.target === paymentModal) {
                paymentModal.style.display = 'none';
            }
        });

        submitPaymentButton.addEventListener('click', function() {
            const address = document.getElementById('wallet-address').value;
            const amount = parseFloat(document.getElementById('amount').value);

            if (address && !isNaN(amount) && amount > 0) {
                if (walletBalance >= amount) {
                    walletBalance -= amount;
                    document.getElementById('wallet-balance').innerText = walletBalance.toFixed(2);
                    alert(`Payment of $${amount} sent to ${address}`);
                    paymentModal.style.display = 'none';
                } else {
                    alert('Insufficient balance!');
                }
            } else {
                alert('Please enter a valid wallet address and amount!');
            }
        });

        // Update Bitcoin price every 30 seconds
        setInterval(fetchBitcoinPrice, 30000);

        // Initial fetch on page load
        fetchBitcoinPrice();
    </script>
